<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
    <br/>
    <br/>
    <% if current_user %>
      <%= form_for [@product, @review] do |f| %>
        <div class="form-group row">
          <%= f.label(:description) %>
          <%= f.text_field(:description) %>
        </div>
        
        <div class="form-group row">
          <%= f.label(:rating) %>
          <%= f.select :rating, [1, 2, 3, 4, 5], prompt: 'Select One' %>
        </div>
        
        <div class="form-group row">
          <%= f.submit 'Post Review', class: 'btn btn-info' %>
        </div>
      <% end %>
    <% end %>
    
    <br/>
    <div class="col-sm-8">
      <dl class="dl-horizontal">
        <% @product.reviews.reverse_each do |review| %>
          <dt>User</dt>
          <dd><%= review.user.name %></dd>
          <dt>Description</dt>
          <dd><%= review.description %></dd>
          <dt>Rating</dt>
          <dd>
            <% for i in 1..review.rating do %>
              ⭐ ️
            <% end %>
            <% for i in 1..(5 - review.rating) do %>
              ★ ️
            <% end %>
          </dd>
          <dt>Posted at</dt>
          <dd>
          <%= review.created_at %>
          <% if current_user === review.user %>
            <%= link_to fa_icon('trash'), review_path(review), 
            class: 'btn btn-sm btn-danger', method: :delete, 
            data: { confirm: "Are you sure?" } %>
          <% end %>
          </dd>
          <br/>
          <% end %>
      </dl>
    </div>
  </article>
</section>
